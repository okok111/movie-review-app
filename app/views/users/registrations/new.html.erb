
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br />
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %><br />
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br />
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
    <%- if controller_name != 'sessions' %>
      <%= link_to "Log in", new_session_path(resource_name),class:"userbtn" %><br />
    <% end %>
  </div>
<br>
  <div class="google-auth">
    <%- if devise_mapping.omniauthable? %>
      <%= link_to user_google_oauth2_omniauth_authorize_path do %>
        <%= image_tag 'btn_google_signin_dark_normal_web.png' ,class:"google-img"%>
      <% end %>
    <% end %>
  </div>
<% end %>

<%= render "users/shared/links" %>
